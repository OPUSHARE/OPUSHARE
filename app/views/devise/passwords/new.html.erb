<div class="contents">
<h2>パスワードを忘れた</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
	<%= devise_error_messages! %>

	<div><strong>メールアドレス</strong><br />
	<%= f.email_field :email, :autofocus => true %></div>

	<div><%= f.submit "送信" %></div>
<% end %>
</div>
