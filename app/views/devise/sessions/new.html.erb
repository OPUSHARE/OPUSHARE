<div class="contents">
<h2>ログイン</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<div><strong>メールアドレス</strong><br />
	<%= f.email_field :email, :autofocus => true %></div>

	<div><strong>パスワード</strong><br />
	<%= f.password_field :password %></div>

	<% if devise_mapping.rememberable? -%>
	  <div><%= f.check_box :remember_me %> パスワードを記憶</div><br>
	<% end -%>

	<div><%= f.submit "ログイン" %></div>
<% end %>

<br><%= link_to 'パスワードを忘れた', new_user_password_path %>
<br><%= link_to '新規登録', new_user_registration_path %>
</div>
